{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:3",
	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter"
			]
		}
	},
	"postCreateCommand": "pip install --upgrade pip && pip install ipykernel"
}